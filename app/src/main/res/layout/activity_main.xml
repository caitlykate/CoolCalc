<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cold_light_beige"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nothing"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textColor="@color/graphite" />

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/graphite"
        android:textSize="60sp"

        />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/graphite"
        android:textSize="45sp" />
    <!-- Поле с кнопками>  <!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Строка с кнопками>  <!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_del_all"
                style="@style/ActionButton"
                android:text="DA"
                android:textColor="@color/yellow_main" />

            <TextView
                android:id="@+id/btn_del"
                style="@style/ActionButton"
                android:text="D"
                android:textColor="@color/yellow_main" />

            <TextView
                android:id="@+id/btn_prc"
                style="@style/ActionButton"
                android:text="%"
                android:textColor="@color/yellow_main" />

            <TextView
                android:id="@+id/btn_div"
                style="@style/ActionButton"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_7"
                style="@style/NumberButton"
                android:text="7"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_8"
                style="@style/NumberButton"
                android:text="8"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_9"
                style="@style/NumberButton"
                android:text="9"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_mult"
                style="@style/ActionButton"
                android:text="*"
                android:textColor="@color/yellow_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_4"
                style="@style/NumberButton"
                android:text="4"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_5"
                style="@style/NumberButton"
                android:text="5"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_6"
                style="@style/NumberButton"
                android:text="6"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_min"
                style="@style/ActionButton"
                android:text="-"
                android:textColor="@color/yellow_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                style="@style/NumberButton"
                android:text="1"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_2"
                style="@style/NumberButton"
                android:text="2"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_3"
                style="@style/NumberButton"
                android:text="3"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_plus"
                style="@style/ActionButton"
                android:text="+"
                android:textColor="@color/yellow_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dot"
                style="@style/NumberButton"
                android:text=","
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_0"
                style="@style/NumberButton"
                android:text="0"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_brackets"
                style="@style/NumberButton"
                android:text="( )"
                android:textColor="@color/graphite" />

            <TextView
                android:id="@+id/btn_res"
                style="@style/ActionButton"
                android:background="@color/yellow_main"
                android:text="="
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>